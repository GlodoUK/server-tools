<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res_config_settings_view_form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form" />
            <field name="priority">17</field>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div
                        class="app_settings_block"
                        data-string="Twilio"
                        data-key="twilio_config"
                        groups="base.group_system"
                    >
                        <h2>Twilio</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="twilio_enabled" />
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="twilio_enabled" class="o_form_label" />
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <div class="m16">
                                        <label for="twilio_sid" class="o_form_label" />
                                        <div class="content-group">
                                            <field name="twilio_sid" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <div class="m16">
                                        <label
                                            for="twilio_token"
                                            class="o_form_label"
                                        />
                                        <div class="content-group">
                                            <field name="twilio_token" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
