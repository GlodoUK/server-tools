<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.mail</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <div id="emails" position='inside'>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Email Behaviour</span>
                            <div class="text-muted">
                                Configure your emailing behaviour
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="force_mail"/>
                                </div>
                                <div class="mt16" attrs="{'invisible': [('force_mail', '=', 0)]}">
                                    <label for="force_mail_sender" class="o_light_label"/>
                                    <field name="force_mail_sender"/>
                                    <div class="text-muted">
                                        Leave blank to use mail_alias and mail_domain
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </field>
        </record>
    </data>
</odoo>
